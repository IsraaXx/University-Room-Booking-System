{
  "info": {
    "name": "Room Booking System APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Users",
      "item": [
        {
          "name": "Get All Users (ADMIN)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/users",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8080",
              "path": [
                "api",
                "users"
              ]
            }
          }
        },
        {
          "name": "Get User By Id",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/users/{{userId}}",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8080",
              "path": [
                "api",
                "users",
                "{{userId}}"
              ]
            }
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Israa Mohamed\",\n  \"email\": \"israa@example.com\",\n  \"password\": \"123456\",\n  \"role\": \"STUDENT\",\n  \"departmentId\": 1,\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/users/{{userId}}",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8080",
              "path": [
                "api",
                "users",
                "{{userId}}"
              ]
            }
          }
        },
        {
          "name": "Deactivate User",
          "request": {
            "method": "PATCH",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/users/{{userId}}/deactivate",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8080",
              "path": [
                "api",
                "users",
                "{{userId}}",
                "deactivate"
              ]
            }
          }
        },
        {
          "name": "Activate User",
          "request": {
            "method": "PATCH",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/users/{{userId}}/activate",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8080",
              "path": [
                "api",
                "users",
                "{{userId}}",
                "activate"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Approve Booking (ADMIN)",
          "request": {
            "method": "PATCH",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/v1/bookings/{{bookingId}}/approve?adminUserId={{adminId}}",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8080",
              "path": [
                "api",
                "v1",
                "bookings",
                "{{bookingId}}",
                "approve"
              ],
              "query": [
                {
                  "key": "adminUserId",
                  "value": "{{adminId}}"
                }
              ]
            }
          }
        },
        {
          "name": "Cancel Booking",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/v1/bookings/{{bookingId}}?userId={{userId}}&isAdmin={{isAdmin}}",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8080",
              "path": [
                "api",
                "v1",
                "bookings",
                "{{bookingId}}"
              ],
              "query": [
                {
                  "key": "userId",
                  "value": "{{userId}}"
                },
                {
                  "key": "isAdmin",
                  "value": "{{isAdmin}}"
                }
              ]
            }
          }
        },
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"roomId\": 2,\n  \"userId\": 3,\n  \"startTime\": \"2025-09-02T08:00:00\",\n  \"endTime\": \"2025-09-02T09:00:00\",\n  \"title\": \"Team Meeting\"\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/v1/bookings",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8080",
              "path": [
                "api",
                "v1",
                "bookings"
              ]
            }
          }
        }
      ]
    }
  ]
}